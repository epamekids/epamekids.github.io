  <script>
  
      function getFile() {

        $.get("https:\\epamekids.github.io/README.md", function(data) {
          while (true) {
	         setTimeout($("#file").append(data), 10000);
        }
    });

}
  </script>
   
   <div id = "file">
     <button onclick = "getFile()" id = "button">Get Information</button>
   </div>
   
</body>
